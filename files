<script src="assets/js/jQuery.2.2.4.js"></script><!-- load more-->
<script> 
	  $(document).ready(function () {
    size_li = $("#myList div.load").size();
	//alert($('#myList div.load').size());
    x=4;
	//alert("#myList div:lt('+x+')");
    $('#myList div.load:lt('+x+')').show();
    $('#loadMore').click(function () {
        x= (x+4 <= size_li) ? x+4 : size_li;
        $('#myList div.load:lt('+x+')').show();
		//alert(x);
		if(x==size_li){
		//$('#loadMore').hide();
		$('#loadMore').text("No More Posts");
		}
    });
	

});</script>

Css

.load-more {
	text-align: center;
	margin-bottom: 100px;
}
#myList div.load{ display:none;
}


#loadMore  {
    color: #fff;
    background: #000;
    padding: 15px 30px;
    text-transform: uppercase;
    font-size: 16px;
    font-weight: 700;
	cursor:pointer;
	width: max-content;
    margin: 0 auto 100px auto;
}


